<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AboutTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">24sp</item>
<!--        <item name="android:padding">18dp</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SelectTownButton" parent="Widget.MaterialComponents.Button">
        <item name="android:text">@string/select_town</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="icon">@drawable/ic_place_white_24dp</item>
    </style>

</resources>
